{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Extension-specific fixes */
    "types": ["chrome","node"],
    "strict": true,
    "noImplicitAny": true,

    /* Vite / React */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "jsx": "react-jsx",

    /* Output */
    "noEmit": true
  },
  "include": ["src"]
}
