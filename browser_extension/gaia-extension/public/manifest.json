{
  "manifest_version": 3,
  "name": "GAIA Prompt Optimizer",
  "version": "1.0",
  "description": "Prompt optimization & COâ‚‚ tracking",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
